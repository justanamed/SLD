
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_citizenLayout.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>FormListFam</title>
    <link href="~/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <style>
        * {
            color: black !important;
            text-decoration: none;
            font-size: 13pt;
        }

        .Add-title{
            font-weight: bold;
            font-style: italic;
            text-decoration: underline !important;
        }

        .size-md {
            width: 300px;
        }

        .size-lg {
            width: 400px;
        }

        .fg-md {
            width: 67.5%;
            margin-left: auto;
            margin-right: auto;
        }

        .txt-bold {
            font-weight: bold;
        }

        .ml-out {
            margin-left: -65px;
        }
    </style>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://unpkg.com/gijgo@1.9.13/js/gijgo.min.js" type="text/javascript"></script>
    <link href="https://unpkg.com/gijgo@1.9.13/css/gijgo.min.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <content>
        <br />
        <hr />
        <form>
            <div class="container columns-90 mt-auto ml-auto">
                <h3 class="Add-title">Thông tin chi tiết thành viên</h3>
            </div>
            <br />
            <div class="form-group fg-md">
                <div class="row">
                    <label class="col-md-3">Họ tên thành viên</label>
                    <div class="columns-40"><input class="form-control size-lg" /></div>
                </div>
                <br />
                <h5 class="ml-out txt-bold bullet-text">I. Thông tin chung</h5>
                <br />
                <div class="row">
                    <label class="col-md-3">1. Quan hệ:</label>
                    <select class="form-control size-md col-md-4">
                        <option>Chủ hộ</option>
                        <option>Vợ chủ hộ</option>
                        <option>Con chủ hộ</option>
                    </select>
                </div><br />
                <div class="row">
                    <label class="col-md-3 ">2. Giới tính:</label>
                    <select class="form-control size-md col-md-4">
                        <option>Nam(1)</option>
                        <option>Nữ(2)</option>
                        <option>Không xác định(3)</option>
                    </select>
                </div><br />
                <div class="row">
                    <label class="col-md-3 ">3. Ngày sinh:</label>
                    <input id="datepicker" width="315" placeholder=" /  /  " />
                </div><br />
                <div class="row">
                    <label class="col-md-3 ">4. Trình độ giáo dục:</label>
                    <select class="form-control size-md col-md-4">
                        <option>lớp ... /12 (...)</option>
                        <option>lớp ... /12 (...)</option>
                        <option>lớp ... /12 (...)</option>
                    </select>
                </div><br />
                <div class="row">
                    <label class="col-md-6 ">5. Chứng minh nhân dân/ Căn cước công dân:</label>
                    <div class="columns-40"><input class="form-control size-lg" /></div>
                </div><br />
                <div class="row">
                    <label class="col-md-3 ">6. Số điện thoại:</label>
                    <div class="columns-30"><input class="form-control size-md" /></div>
                </div>
            </div>
        </form>
    </content>
    <script>
        $('#datepicker').datepicker({
            uiLibrary: 'bootstrap4'
        });
    </script>
    <br /><br />
</body>
</html>